<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/blackYP</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MySwitchMaterialStyle">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

<style name="SettingTextView">
    <item name="android:textSize">@dimen/text</item>
    <item name="android:paddingHorizontal">@dimen/medium_padding</item>
    <item name="android:drawablePadding">@dimen/medium_padding</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">?attr/blackWhite</item>
    <item name="android:drawableTint">?attr/grayWhite</item>
</style>

    <style name="AudioPlayerText">
        <item name="android:layout_marginStart">@dimen/large_padding</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text13</item>
    </style>

    <style name="ButtonÐ¡reate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_padding</item>
        <item name="android:layout_marginBottom">@dimen/thirty_two</item>
        <item name="android:backgroundTint">@drawable/create_playlist_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="RoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_padding</item>
    </style>

    <style name="DarkPoint" >
        <item name="android:src">@drawable/icon_point_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="ButtonBackTrans">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/twelve</item>
        <item name="android:importantForAccessibility">no</item>

        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="PlaylistDetailMoreIcon">
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/icon_more</item>
    </style>

</resources>