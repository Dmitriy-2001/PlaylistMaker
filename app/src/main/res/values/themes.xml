<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item> <!-- Цвет текста -->
        <item name="android:textColorSecondary">@color/black</item><!-- Цвет иконок -->
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="vector_color">@color/black</item>
        <item name="blackWhite">@color/blackYP</item>
        <item name="whiteBlack">@color/white</item>
        <item name="grayWhite">@color/gray</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/blackYP</item>
        <item name="colorPrimary">@color/blue</item>
    </style>


    <style name="Main" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="SearchMain" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="blackWhite">@color/blackYP</item>
        <item name="whiteBlack">@color/white</item>
    </style>

    <style name="Settings" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="textColor">@color/black</item>
        <item name="switchTrackColor">@color/light_grey</item>
        <item name="blackWhite">@color/black</item>
        <item name="switchThumbColor">@color/gray</item>
        <item name="grayWhite">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Search" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/blackYP</item>
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:background">@color/white</item> <!-- Цвет фона всего экрана при светлой теме -->
         <!-- Используется стиль для поля ввода при светлой теме -->
        <item name="searchFieldBackground">@color/light_grey</item> <!-- Используется файл формы для светлой темы -->
        <item name="searchIconTint">@color/gray</item> <!-- Цвет иконок для светлой темы -->
        <item name="searchTextColor">@color/blackYP</item> <!-- Цвет текста в поле поиска для светлой темы -->
        <item name="searchHintTextColor">@color/gray</item> <!-- Цвет подсказки в поле поиска для светлой темы -->
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="AddFont">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:tint">@color/gray</item>
    </style>


    <style name="ImageViewToolbarStyle">
        <item name="android:layout_marginStart">@dimen/medium_padding</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="tint">@color/blackYP</item>
    </style>

    <style name="TextViewToolbarStyle">
        <item name="android:layout_marginStart">@dimen/layout_margin_start_textview_toolbar</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="search_form">
        <item name="tint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:colorControlActivated">@color/blue</item>
    </style>

    <style name="place_holder">
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button_reload">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blackYP</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="holder_text">
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MedialibraryTableoutStyle">
        <item name="tabTextColor">@color/blackYP</item>
        <item name="tabIndicatorColor">@color/blackYP</item>
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MedialibraryToolbarStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomMenuStyle">
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="background">@color/white</item>
        <item name="alpha">1.0</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemIconSize">24dp</item>

        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/menu_text</item>
    </style>

    <style name="NewPlaylistTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/blackYP</item>
        <item name="boxStrokeColor">@drawable/box_stroke_color</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="TextInField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/blackYP</item>
    </style>

    <style name="TextTrackCount">
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TinyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AddToPlaylistTitle">
        <item name="android:textColor">@color/blackYP</item>
        <item name="android:layout_marginTop">@dimen/eighteen</item>
        <item name="android:layout_marginBottom">@dimen/twelve</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="NewPlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:backgroundTint">@color/blackYP</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>